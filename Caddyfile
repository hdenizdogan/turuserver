{
    auto_https off
}

# ---- HTTP â†’ HTTPS redirect ----
http://{$DOMAIN}, http://*.{$DOMAIN} {
    redir https://{host}{uri} permanent
}

# ---- Common TLS snippet ----
(tls_manual) {
    tls /certs/{args[0]}/certs/{args[0]}.{$DOMAIN}.crt \
        /certs/{args[0]}/certs/{args[0]}.{$DOMAIN}.key
}

# ---- Common proxy snippet ----
(proxy) {
    reverse_proxy {args[0]}
}

# ---- Services ----

https://adguard.{$DOMAIN} {
    import tls_manual adguard
    import proxy adguard:80
}

https://bazarr.{$DOMAIN} {
    import tls_manual bazarr
    import proxy bazarr:6767
}

