{
    auto_https off
}

# ---- HTTP â†’ HTTPS redirect ----
http://{$DOMAIN}, http://*.{$DOMAIN} {
    redir https://{host}{uri} permanent
}

# ---- Common TLS snippet ----
(tls_manual) {
    tls /certs/{args[0]}/certs/{args[1]}.{$DOMAIN}.crt \
        /certs/{args[0]}/certs/{args[1]}.{$DOMAIN}.key
}

# ---- Common proxy snippet ----
(proxy) {
    reverse_proxy {args[0]}
}

# ---- Services ----

https://bazarr.{$DOMAIN} {
    import tls_manual bazarr bazarr
    import proxy bazarr:6767
}

https://dash.{$DOMAIN} {
    import tls_manual dash dash
    import proxy dash:3001
}

https://immich.{$DOMAIN} {
    import tls_manual immich immich
    import proxy immich:2283
}

