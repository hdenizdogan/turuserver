{
    # Email used for ACME registration
    email {$CADDY_EMAIL}

    # Use Cloudflare DNS challenge for ALL certificates
    acme_dns cloudflare {$CLOUDFLARE_API_TOKEN}
}

# --------------------------------------------------
# Redirect HTTP → HTTPS
# --------------------------------------------------
http://*.{$DOMAIN} {
    redir https://{host}{uri} permanent
}

# --------------------------------------------------
# Snippets
# --------------------------------------------------

(proxy) {
    reverse_proxy {args[0]}
}

